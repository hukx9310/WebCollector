<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@color/transparent"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_item_padding"
        android:gravity="center"
        android:text="@string/access"
        android:background="@drawable/layout_selector"
        android:textSize="@dimen/dialog_item_tx_size"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_item_padding"
        android:gravity="center"
        android:text="@string/edit"
        android:background="@drawable/layout_selector"
        android:textSize="@dimen/dialog_item_tx_size"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_item_padding"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/alert"
        android:background="@drawable/layout_selector"
        android:textSize="@dimen/dialog_item_tx_size" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_item_padding"
        android:layout_marginTop="@dimen/dialog_item_cancel_margin"
        android:layout_marginBottom="@dimen/dialog_item_cancel_margin"
        android:gravity="center"
        android:text="@string/cancel"
        android:textSize="@dimen/dialog_item_tx_size"
        android:background="@drawable/corners_bg" />

</LinearLayout>